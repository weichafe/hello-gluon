<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="418.0" prefWidth="900.0"
            stylesheets="@../../css/SimpleTheme.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cl.controller.StrategyController">

    <VBox styleClass="black-hbox" prefHeight="400.0" prefWidth="1000.0" minWidth="1100" spacing="20"
          AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0"
          AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="10.0">

        <TitledPane text="Strategy Configuration" animated="false" collapsible="false" prefHeight="200.0" prefWidth="1100" minWidth="1100">
            <VBox alignment="CENTER" spacing="10.0">
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="10.0" prefWidth="140.0" hgrow="SOMETIMES" />
                        <ColumnConstraints minWidth="10.0" prefWidth="140.0" hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Strategy" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="strategyname" prefWidth="140.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label text="Symbol" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <TextField fx:id="symbol" prefWidth="140.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Market Data" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <ComboBox fx:id="mkd" minWidth="110" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label text="Routing" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <ComboBox fx:id="routing" minWidth="120" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <Label text="Account" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                        <TextField fx:id="account" prefWidth="140.0" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                        <Label text="SettlType" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                        <ComboBox fx:id="settlType" minWidth="80" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                        <Label text="Currency" GridPane.columnIndex="6" GridPane.rowIndex="0" />
                        <ComboBox fx:id="currency" minWidth="80" GridPane.columnIndex="6" GridPane.rowIndex="1" />
                        <Label text="SecurityType" GridPane.columnIndex="7" GridPane.rowIndex="0" />
                        <ComboBox fx:id="securityType" minWidth="80" GridPane.columnIndex="7" GridPane.rowIndex="1" />
                        <Label text="Prefix" GridPane.columnIndex="8" GridPane.rowIndex="0" />
                        <TextField fx:id="prefix" prefWidth="130" GridPane.columnIndex="8" GridPane.rowIndex="1" />
                        <Label text="HandlInst" GridPane.columnIndex="9" GridPane.rowIndex="0" />
                        <ComboBox fx:id="handlInst" minWidth="120" GridPane.columnIndex="9" GridPane.rowIndex="1" />
                    </children>
                </GridPane>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES" />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES" />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <children>
                        <Label text="Spread Take Profit" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="spreadTakeprofit" prefWidth="50.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label text="Spread Stop Loss" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <TextField fx:id="spreadStopLoss" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Qty" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField fx:id="qty" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label text="Decimal Px" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <TextField fx:id="decPx" prefWidth="50.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </VBox>
        </TitledPane>

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="btnAddStrategy" text="Add" onAction="#addStrategy" prefWidth="100.0" />
            <Button fx:id="btnUpdateStrategy" text="Update" onAction="#updateStrategy"  prefWidth="100.0" />
            <Button fx:id="btnDeleteStrategy" text="Remove" onAction="#deleteStrategy" prefWidth="100.0" />
            <Button fx:id="btnCloneStrategy" text="Clone" onAction="#cloneStrategy" prefWidth="100.0" />
        </HBox>

    </VBox>
</AnchorPane>
